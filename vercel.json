{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "includeFiles": [
          "static/**",
          "templates/**",
          "user_uploads/**"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ],
  "regions": ["hkg1"],
    "functions": {
      "app.py": {
        "memory": 3008,
        "maxDuration": 30
      }
    }
}